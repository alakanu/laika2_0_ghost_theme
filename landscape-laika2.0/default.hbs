<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}" />

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">

<div id="menu">
<nav role="navigation" class="site-navigation main-navigation">
    <h1 class="assistive-text">Menu</h1>

    <div class="menu-main-container">
    <ul id="menu-main" class="menu">
    <li><a href="/about">About</a></li>
    <li><a href="/team">The team</a>
        <ul class="menu">
            <li><a href="/ale">Ale</a></li>
            <li><a href="/albe">Albe</a></li>
            <li><a href="/salvo">Salvo</a></li>
            <li><a href="/luca">Luca</a></li>
        </ul>
    </li>
    <li><a href="{{@blog.url}}">Home</a></li>
    </ul>
    </div>
</nav><!-- .site-navigation .main-navigation -->
</div><!-- #menu -->

<header class="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="vertical">
        <div class="site-head-content inner">
            <a class="blog-logo" href="{{@blog.url}}">
            {{#if @blog.logo}}
                <img src="{{@blog.logo}}" alt="Blog Logo" />
            {{/if}}
            </a>
        </div>
    </div>
    
</header>
<div class= "description-box">   
    <span class="description">
                                Welcome to the Laika2.0 developers blog
    </span>
    
    <!-- SOCIAL -->
    <div id="socialblock">
        <div id="social">
            <div class="facebook">
                <a href="https://www.facebook.com/laika2.0" title="Laika2.0 on Facebook" target="_blank"> Laika2.0 on Facebook </a>
            </div>
        </div>
    </div>
</div>
    {{! Everything else gets inserted here }}
    {{{body}}}

    <footer class="site-footer">
        <a class="subscribe icon-feed" href="{{@blog.url}}/rss/"><span class="tooltip">Subscribe!</span></a>
        <div class="inner">
             <section class="copyright">&copy; {{date
             format="YYYY"}} <a href="{{@blog.url}}/">{{@blog.title}}</a>
             </section>
        </div>
    </footer>

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! The main JavaScript file for Landscape }}
    <script type="text/javascript" src="{{asset "js/jquery.fitvids.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/index.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/small-menu.js"}}"></script>

</body>
</html>
